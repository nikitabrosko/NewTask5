@model Application.UseCases.Identity.User.Queries.LoginUser.LoginUserQuery

@{
    Layout = null;
}

@await Html.PartialAsync("_StylesImportPartial")

<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl" id="loginAccountForm" class="form-group">

    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Name")
        @Html.EditorFor(m => m.Name, new
        {
            htmlAttributes = new
            {
                required = "true", minlength = "2", maxlength = "20",
                @class = "form-control", placeholder = "Name", type = "text"
            }
        })
    </div>

    <div class="form-group">
        @Html.Label("Password")
        @Html.EditorFor(m => m.Password, new
        {
            htmlAttributes = new
            {
                required = "true", minlength = "4", maxlength = "16",
                @class = "form-control", type = "password", @id = " password"
            }
        })
    </div>
    
    <div class="form-group">
        @Html.Label("Remember ")
        @Html.EditorFor(m => m.RememberMe, new{htmlAttributes = new{@class = "form-control"}})
    </div>

    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-dark" style="width: 100%"/>
    </div>
</form>

@await Html.PartialAsync("_ScriptsImportPartial")
@await Html.PartialAsync("_ValidationScriptsPartial")

<script>
    $("#loginAccountForm").validate();
</script>