@model Application.UseCases.Products.Commands.CreateProduct.CreateProductCommand

<h2 class="text-center">Create product</h2>

@using (Html.BeginForm("Create", "Product", FormMethod.Post,
  new { @id = "createProductForm", @class = "form-group" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Name")
        @Html.EditorFor(p => p.Name, new { htmlAttributes = 
            new { required = "true", minlength = "2", @class = "form-control", placeholder = "Name" }})
    </div>

    <div class="form-group">
        @Html.Label("Price")
        @Html.EditorFor(p => p.Price, new { htmlAttributes =
            new { required = "true", type = "number", min = "0", @class = "form-control", placeholder = "Price" }})
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-dark" />
        @Html.ActionLink("Back to List", "ProductsPage", new { }, new { @class = "btn btn-dark" })
    </div>
}

@section Scripts {
    <script>
        $("#createProductForm").validate();
    </script>
}