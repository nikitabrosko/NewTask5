@model Application.UseCases.Products.Queries.GetFilteringProductsWithPagination.GetFilteringProductsWithPaginationQuery

@using (Html.BeginForm("FilteringProductsPage", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <th scope="col" width="200px">@Html.EditorFor(m => m.NameFilter, 
                                      new { htmlAttributes = new { @class = "form-control mr-sm-2", 
                                          placeholder = "Name", style = "text-align: center" } })</th>
    <th scope="col" width="200px">@Html.EditorFor(m => m.PriceFilter, 
                                      new { htmlAttributes = new { @class = "form-control mr-sm-2", 
                                          type = "number", min = "0", placeholder = "Price", style = "text-align: center" } })</th>
    <th scope="col"><input type="submit" value="Search" class="btn btn-dark" /></th>
    <th scope="col"><input type="reset" value="Clear" class="btn btn-dark" /></th>
}