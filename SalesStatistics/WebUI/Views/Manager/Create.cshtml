@model Application.UseCases.Managers.Commands.CreateManager.CreateManagerCommand

@{
    Layout = null;
}

@await Html.PartialAsync("_StylesImportPartial")

@using (Html.BeginForm("Create", "Manager", FormMethod.Post,
 new { @id = "createManagerForm", @class = "form-group" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Last name")
        @Html.EditorFor(m => m.LastName, new
        {
           htmlAttributes = new { required = "true", minlength = "2", maxlength = "20", 
                    @class = "form-control", placeholder = "Last name", type = "text" }
        })
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-dark" style="width: 100%" />
    </div>
}

@await Html.PartialAsync("_ScriptsImportPartial")
@await Html.PartialAsync("_ValidationScriptsPartial")

<script>
    $("#createManagerForm").validate();
</script>