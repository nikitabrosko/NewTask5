<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @await Html.PartialAsync("_StylesImportPartial")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand-custom navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SalesStatistics</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav-justify navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="CustomersPage">Customers</a>
                            }
                            else
                            {
                                <button class="nav-link text-dark need-to-authorize">Customers</button>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="ManagersPage">Managers</a>
                            }
                            else
                            {
                                <button class="nav-link text-dark need-to-authorize">Managers</button>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ProductsPage">Products</a>
                            }
                            else
                            {
                                <button class="nav-link text-dark need-to-authorize">Products</button>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="OrdersPage">Orders</a>
                            }
                            else
                            {
                                <button class="nav-link text-dark need-to-authorize">Orders</button>
                            }
                        </li>
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <div class="modal" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
            </div>
        </div>
    </div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - SalesStatistics
    </div>
</footer>
    @await Html.PartialAsync("_ScriptsImportPartial")
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $("#loginAccountForm").validate();

        $(document).on('click', "#menuContainer", function (e) {
            e.stopPropagation();
        });

        $(".need-to-authorize").click(function() {
            alert("First you need to authorize!");
        });
    </script>
</body>
</html>