<ul class="navbar nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item" style="margin-right: 10px">
            <div class="btn-group">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @User.Identity.Name | Menu
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    @Html.ActionLink("Logout", "Logout", "Account",
                        new { }, new { @class = "dropdown-item" })
                    @if (User.IsInRole("admin"))
                    {
                        @Html.ActionLink("Manage Users", "UsersPage", "User",
                            new { }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Manage Roles", "RolesPage", "Role",
                            new { }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Manage Users with Roles", "UsersRolesPage", "Role",
                            new { }, new { @class = "dropdown-item" })
                    }
                </div>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <div class="btn-group">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sign In
                </button>
                @await Html.PartialAsync("_SignInPartial")
            </div>
        </li>
    }
</ul>